                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/frameStar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="17dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_star"
                        app:customIconColor="@color/text"
                        app:customIconWidth="20dp" />

                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/frameRhombus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="17dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_rhombus"
                        app:customIconColor="@color/text"
                        app:customIconWidth="20dp" />


                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/frameCircleMini"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="17dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_circle"
                        app:customIconColor="@color/text"
                        app:customIconWidth="15dp" />

                </RadioGroup>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/frameCircleSizeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="15dp"
                    android:text="0.20" />


                <SeekBar
                    android:id="@+id/frameCircleSizeSlider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:gravity="start|center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/console"
                    android:text="Eye Ball Shape"
                    android:textAllCaps="true"
                    android:textColor="@color/text"
                    android:textSize="14sp" />


                <RadioGroup
                    android:id="@+id/radioGroupEyeShape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:orientation="horizontal">

                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/eyeDefault"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="17dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_square"
                        app:customIconColor="@color/text"
