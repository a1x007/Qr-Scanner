<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <com.ashique.qrscanner.custom.Frame
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:minHeight="300dp"
        app:borderColor="@android:color/transparent"
        app:cornerRadius="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="start|center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/console"
                    android:text="Qr Shape"
                    android:textAllCaps="true"
                    android:textColor="@color/text"
                    android:textSize="14sp" />


                <RadioGroup
                    android:id="@+id/radioGroupQrShape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:orientation="horizontal">
                    
                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/qrDefault"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="17dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_square"
                        app:customIconColor="@color/text"
                        app:customIconWidth="20dp"
                        android:checked="true"/>

                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/qrCircle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="17dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_circle"
                        app:customIconColor="@color/text"
                        app:customIconWidth="20dp" />

                </RadioGroup>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:gravity="start|center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/console"
                    android:text="Dark Pixels Shape"
                    android:textAllCaps="true"
                    android:textColor="@color/text"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/radioGroupDarkPixelShape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start|center"
                    android:orientation="horizontal">


                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/pixelDefault"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="17dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_square"
                        app:customIconColor="@color/text"
                        app:customIconWidth="20dp"
                        android:checked="true"/>

                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/pixelCircle"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="17dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_circle"
                        app:customIconColor="@color/text"
                        app:customIconWidth="20dp" />


                    
                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/pixelRoundCorners25"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="17dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_rounded_corner"
                        app:customIconColor="@color/text"
                        app:customIconWidth="20dp" />


                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/pixelStar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="17dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_star"
                        app:customIconColor="@color/text"
                        app:customIconWidth="20dp" />
                    
                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/pixelRhombus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="17dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_rhombus"
                        app:customIconColor="@color/text"
                        app:customIconWidth="20dp" />

                    

                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/pixelRoundCornersHorizontal"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="17dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_rounded_line"
                        app:customIconColor="@color/text"
                        app:customIconWidth="20dp" />
                    

                    <com.ashique.qrscanner.custom.RadioButtons
                        android:id="@+id/radioButtonRoundCornersVertical"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp"
                        app:customIcon="@drawable/shape_rounded_line"
                        app:customIconColor="@color/text"
                        app:customIconWidth="20dp"
                        android:rotation="90"/>
                </RadioGroup>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
