<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GeneratorActivity">


    <ImageView
        android:id="@+id/qrPreview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/verify_qr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/console"
        android:text="Qr: "
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qrPreview" />



    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/verify_qr_text">

        <com.ashique.qrscanner.custom.Buttons
            android:id="@+id/generate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Generate"
            android:textColor="@color/text"
            app:_fillColor="@color/radio_buttons_border" />

        <com.ashique.qrscanner.custom.Buttons
            android:id="@+id/upload_logo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Logo"
            android:textColor="@color/text"
            app:_fillColor="@color/radio_buttons_border" />

        <com.ashique.qrscanner.custom.Buttons
            android:id="@+id/upload_stillBg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Still Bg"
            android:textColor="@color/text"
            app:_fillColor="@color/radio_buttons_border" />

        <com.ashique.qrscanner.custom.Buttons
            android:id="@+id/upload_blendBg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Blend Bg"
            android:textColor="@color/text"
            app:_fillColor="@color/radio_buttons_border" />

        <com.ashique.qrscanner.custom.Buttons
            android:id="@+id/upload_gifBg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Gif Bg"
            android:textColor="@color/text"
            app:_fillColor="@color/radio_buttons_border" />

        <com.ashique.qrscanner.custom.Buttons
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Save"
            android:textColor="@color/text"
            app:_fillColor="@color/radio_buttons_border" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/colorized_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/console"
                    android:textAllCaps="true"
                    android:text="Colorized ?" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/colorized_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/background_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/console"
                    android:textAllCaps="true"
                    android:text="Binary Convert ?" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/binary_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/halftone_dotsize_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/console"
                android:textAllCaps="true"
                android:text="Dot Size: 0.20" />


            <SeekBar
                android:id="@+id/halftone_dotsize_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/halftone_resolution_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/console"
                android:textAllCaps="true"
                android:text="Resolution: 0.20" />


            <SeekBar
                android:id="@+id/halftone_resolution_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="4"
                android:visibility="visible" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/contrast_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/console"
                android:textAllCaps="true"
                android:text="Contrast: 0.20" />


            <SeekBar
                android:id="@+id/contrast_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/brightness_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/console"
                android:textAllCaps="true"
                android:text="Brightness: 0.20" />


            <SeekBar
                android:id="@+id/brightness_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:visibility="visible" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>