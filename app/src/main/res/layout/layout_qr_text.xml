                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <LinearLayout
                    android:id="@+id/btn_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/field7"
                        style="@style/TextInputLayoutStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        app:boxStrokeWidth="2dp"
                        app:boxStrokeWidthFocused="2dp"
                        app:hintTextColor="@color/text">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/console" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.ashique.qrscanner.custom.Buttons
                        android:id="@+id/btn1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2.5dp"
                        android:layout_weight="0.12"
                        android:padding="4dp"
                        app:_activeColor="@color/text"
                        app:_activeIconColor="@color/icon_active"
                        app:_borderColor="@color/radio_buttons_border"
                        app:_borderWidth="2dp"
                        app:_fillColor="@color/radio_buttons_border"
