                        android:textAllCaps="true"
                        android:textSize="14sp"
                        app:customActiveColor="@color/text"
                        app:customActiveIconColor="@color/icon_active"
                        app:customActiveTextColor="@color/icon_active"
                        app:customBackgroundColor="@color/radio_buttons_border"
                        app:customBorderColor="@color/radio_buttons_border"
                        app:customBorderWidth="1dp"
                        app:customCornerRadius="3dp" />

