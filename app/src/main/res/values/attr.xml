<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ColorSlider">
        <attr name="sliderBarStrokeCap" format="enum">
            <enum name="Butt" value="0" />
            <enum name="Round" value="1" />
            <enum name="Square" value="2" />
        </attr>
        <attr name="sliderThickness" format="dimension"/>
        <attr name="sliderThumbSize" format="dimension"/>
        <attr name="sliderStrokeSize" format="dimension"/>
        <attr name="sliderStrokeColor" format="color"/>

    </declare-styleable>

    <declare-styleable name="Button">
        <attr name="_radius" format="dimension" />
        <attr name="_fillColor" format="color" />
        <attr name="_borderColor" format="color" />
        <attr name="_borderWidth" format="dimension" />
        <attr name="_icon" format="reference" />
        <attr name="_iconColor" format="color" />
        <attr name="_iconWidth" format="dimension" />
        <attr name="_iconHeight" format="dimension" />
        <attr name="_textMarginTop" format="dimension" />
        <attr name="_textMarginBottom" format="dimension" />
        <attr name="_textMarginLeft" format="dimension" />
        <attr name="_textMarginRight" format="dimension" />
        <attr name="_checked" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomRadioButton">
        <attr name="customBackgroundColor" format="color" />
        <attr name="customCornerRadius" format="dimension" />
        <attr name="customIcon" format="reference" />
        <attr name="customIconColor" format="color" />
        <attr name="customIconWidth" format="dimension" />
        <attr name="customIconHeight" format="dimension" />
        <attr name="customBorderColor" format="color" />
        <attr name="customBorderWidth" format="dimension" />
        <attr name="customActiveColor" format="color" />
        <attr name="customActiveIconColor" format="color" />

    </declare-styleable>

    <declare-styleable name="Frame">
        <attr name="cornerRadius" format="dimension" />
        <attr name="borderWidth" format="dimension" />
        <attr name="borderColor" format="color" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>


    <declare-styleable name="NavigationTabStrip">
        <attr name="nts_color" format="color"/>
        <attr name="nts_size" format="dimension"/>
        <attr name="nts_weight" format="dimension"/>
        <attr name="nts_factor" format="float"/>
        <attr name="nts_titles" format="reference"/>
        <attr name="nts_bold" value="true"/>

        <attr name="nts_type" format="enum">
            <enum name="line" value="0"/>
            <enum name="point" value="1"/>
        </attr>
        <attr name="nts_gravity" format="enum">
            <enum name="bottom" value="0"/>
            <enum name="top" value="1"/>
        </attr>

        <attr name="nts_typeface" format="string"/>
        <attr name="nts_corners_radius" format="dimension"/>
        <attr name="nts_animation_duration" format="integer"/>

        <attr name="nts_inactive_color" format="color"/>
        <attr name="nts_active_color" format="color"/>
    </declare-styleable>

</resources>