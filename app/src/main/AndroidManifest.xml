<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QrScanner"
        android:largeHeap="true"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.firebase.ml.vision.DEPRECATED_API_ENABLED"
            android:value="true" />
        <meta-data
            android:name="com.google.firebase.ml.common.LOGGING_LEVEL"
            android:value="1" />

        <meta-data
            android:name="com.google.firebase.perf.LogcatLoggingLevel"
            android:value="WARN" />

        <activity
            android:name=".activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".activity.ResultActivity"
            android:exported="true" />

        <activity
            android:name=".activity.QrGenerator"
            android:windowSoftInputMode="adjustPan"
            android:exported="true" />

        <activity
            android:name=".activity.SettingsActivity"
            android:exported="true" />
    </application>


</manifest>